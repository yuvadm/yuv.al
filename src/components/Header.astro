---
interface Props {
	currentPath: string;
}

const { currentPath } = Astro.props;

const navItems = [
	{
		href: "/blog",
		label: "Blog",
		activeColor: "text-purple-600",
		hoverColor: "hover:text-purple-600"
	},
	{
		href: "/projects", 
		label: "Projects",
		activeColor: "text-blue-600",
		hoverColor: "hover:text-blue-600"
	},
	{
		href: "/now",
		label: "Now",
		activeColor: "text-green-600",
		hoverColor: "hover:text-green-600"
	}
];

function isActiveSection(itemHref: string, currentPath: string): boolean {
	return currentPath.startsWith(itemHref);
}
---

<nav class="max-w-4xl mx-auto px-6 py-12">
	<ul class="flex gap-8 items-center">
		<li>
			<a
				href="/"
				class="text-2xl font-black text-gray-800 hover:text-black transition-colors"
			>
				Yuval Adam
			</a>
		</li>
		{navItems.map((item) => (
			<li>
				<a
					href={item.href}
					class="text-lg font-semibold hover:scale-105 transition-all duration-200"
					class:list={[
						isActiveSection(item.href, currentPath) 
							? item.activeColor 
							: `text-gray-600 ${item.hoverColor}`
					]}
				>
					{item.label}
				</a>
			</li>
		))}
	</ul>
</nav>