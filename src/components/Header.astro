---
import NameCanvas from "./NameCanvas.astro";

interface Props {
	currentPath: string;
}

const { currentPath } = Astro.props;

const navItems = [
	{
		href: "/blog",
		label: "Blog",
		activeColor: "text-purple-600",
		hoverColor: "hover:text-purple-600"
	},
	{
		href: "/projects", 
		label: "Projects",
		activeColor: "text-blue-600",
		hoverColor: "hover:text-blue-600"
	},
	{
		href: "/now",
		label: "Now",
		activeColor: "text-green-600",
		hoverColor: "hover:text-green-600"
	}
];

function isActiveSection(itemHref: string, currentPath: string): boolean {
	return currentPath.startsWith(itemHref);
}
---

<nav class="max-w-4xl mx-auto px-6 py-16">
	<div class="flex flex-col items-center gap-6 md:flex-row md:justify-between md:items-center">
		<!-- Canvas logo -->
		<div class="order-1">
			<a href="/" class="block">
				<NameCanvas />
			</a>
		</div>
		
		<!-- Navigation links -->
		<ul class="flex gap-6 md:gap-8 items-center flex-wrap justify-center order-2">
			{navItems.map((item) => (
				<li>
					<a
						href={item.href}
						class="text-lg font-medium hover:scale-105 transition-all duration-200 font-sans"
						class:list={[
							isActiveSection(item.href, currentPath) 
								? item.activeColor 
								: `text-gray-600 ${item.hoverColor}`
						]}
					>
						{item.label}
					</a>
				</li>
			))}
		</ul>
	</div>
</nav>