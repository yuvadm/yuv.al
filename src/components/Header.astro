---
interface Props {
	currentPath: string;
}

const { currentPath } = Astro.props;

const navItems = [
	{
		href: "/blog/",
		label: "Blog",
		activeColor: "text-brand-primary",
		hoverColor: "hover:text-brand-primary",
	},
	{
		href: "/projects/",
		label: "Projects",
		activeColor: "text-brand-primary",
		hoverColor: "hover:text-brand-primary",
	},
	{
		href: "/now/",
		label: "Now",
		activeColor: "text-brand-primary",
		hoverColor: "hover:text-brand-primary",
	},
];

function isActiveSection(itemHref: string, currentPath: string): boolean {
	return currentPath.startsWith(itemHref);
}
---

<nav class="max-w-4xl mx-auto px-6 py-12">
	<ul class="flex gap-8 items-baseline">
		<li>
			<a
				href="/"
				class="text-2xl font-black text-brand-primary hover:text-gray-800 transition-colors"
			>
				Yuval Adam
			</a>
		</li>
		{
			navItems.map((item) => (
				<li>
					<a
						href={item.href}
						class="text-lg font-semibold transition-colors duration-200"
						class:list={[
							isActiveSection(item.href, currentPath)
								? item.activeColor
								: `text-gray-600 ${item.hoverColor}`,
						]}
					>
						{item.label}
					</a>
				</li>
			))
		}
	</ul>
</nav>
