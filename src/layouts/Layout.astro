---
import "../styles/global.css";

interface Props {
	title?: string;
}

const { title = "Yuval Adam" } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Space+Mono:wght@400;700&display=swap">
		<title>{title}</title>
	</head>
	<body class="bg-[#9DB3C4] text-slate-900">
		<div class="fixed top-0 left-0 w-full h-2 bg-[#B8CFE5] border-b border-[#4A6B8C]"></div>
		<slot />
	</body>
</html>

<style is:global>
	@tailwind base;
	@tailwind components;
	@tailwind utilities;

	html {
		font-family: 'Space Mono', monospace;
	}

	.cde-panel {
		@apply bg-[#9DB3C4] border-t-2 border-l-2 border-[#B8CFE5] border-b-2 border-r-2 border-[#4A6B8C];
	}

	.cde-panel-inset {
		@apply bg-[#9DB3C4] border-t-2 border-l-2 border-[#4A6B8C] border-b-2 border-r-2 border-[#B8CFE5];
	}

	@keyframes slideIn {
		from {
			transform: translateX(-100%);
			opacity: 0;
		}
		to {
			transform: translateX(0);
			opacity: 1;
		}
	}

	.slide-in {
		animation: slideIn 0.8s ease-out forwards;
	}
</style>
