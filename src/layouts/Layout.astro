---
import "../styles/global.css";
import Header from "../components/Header.astro";

interface Props {
	title?: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Yuval Adam's personal website" />
		<meta name="viewport" content="width=device-width" />

		<link rel="icon" href="/ico/favicon.ico" sizes="any" />
		<link rel="apple-touch-icon" href="/ico/apple-touch-icon.png" />
		<link rel="manifest" href="/manifest.json" />

		<meta name="generator" content={Astro.generator} />
		<title>{title ? `${title} | Yuval Adam` : "Yuval Adam"}</title>
	</head>
	<body class="bg-gradient-to-br from-white to-brand-secondary/5">
		<Header currentPath={Astro.url.pathname} />
		<slot />
	</body>
</html>
