---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Page Not Found">
	<main class="max-w-4xl mx-auto px-6 py-16">
		<div class="max-w-2xl text-center mx-auto">
			<div class="space-y-6">
				<div class="space-y-2">
					<h1 class="text-8xl font-black text-brand-primary tracking-tight">404</h1>
					<p class="text-2xl font-medium text-gray-800">Page Not Found</p>
				</div>
				<p class="text-lg text-gray-600 leading-relaxed">
					The page you're looking for doesn't exist.
				</p>
				<div class="pt-4">
					<a
						href="/"
						class="inline-flex items-center text-brand-primary hover:text-brand-primary/80 font-medium transition-colors"
					>
						‚Üê Back to home
					</a>
				</div>
			</div>
		</div>
	</main>
</Layout>