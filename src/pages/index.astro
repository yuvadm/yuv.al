---
import Layout from "../layouts/Layout.astro";
import { getEntry } from "astro:content";

const homepage = (await getEntry("pages", "home"))!;
const { title, subtitle } = homepage.data;
const { Content } = await homepage.render();
---

<Layout description="Software engineer, entrepreneur, and technology enthusiast. Working on Namekit, experimenting with agentic coding, and sharing insights about modern web development.">
	<main class="max-w-4xl mx-auto px-6 py-16">
		<div class="max-w-2xl">
			<p class="text-xl mb-16 text-gray-600">{subtitle}</p>
			<div class="space-y-6 mb-24 prose prose-lg prose-a:text-brand-primary prose-a:no-underline prose-a:hover:underline">
				<Content />
			</div>
		</div>
	</main>
</Layout>
