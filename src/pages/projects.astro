---
import Layout from '../layouts/Layout.astro';
import { projects } from '../data/projects';

const sortedProjects = projects.sort((a, b) => b.year - a.year);
const categories = [...new Set(projects.map(p => p.category))];
---

<Layout>
	<main class="max-w-7xl mx-auto px-4 py-8">
		<h1 class="text-3xl font-bold mb-6">Projects</h1>

		<div class="grid grid-cols-3 gap-3">
			{sortedProjects.map((project) => (
				<div class="bg-white rounded border border-gray-100 hover:border-gray-200 transition-colors">
					<div class="p-3">
						<div class="flex items-baseline justify-between gap-2 mb-1">
							<h2 class="font-medium text-sm truncate">{project.name}</h2>
							<span class="text-xs text-gray-400 shrink-0">{project.year}</span>
						</div>
						<p class="text-xs text-gray-600 line-clamp-2 mb-2">{project.description}</p>
						<div class="flex items-center gap-2 text-xs">
							{project.source_code && (
								<a href={project.source_code} 
									class="inline-flex items-center text-blue-600 hover:text-blue-800" 
									target="_blank" 
									rel="noopener">
									<svg class="w-3 h-3 mr-0.5" viewBox="0 0 24 24" fill="currentColor">
										<path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
									</svg>
									Source
								</a>
							)}
							{project.project_url && (
								<a href={project.project_url.startsWith('http') ? project.project_url : `https://${project.project_url}`}
									class="inline-flex items-center text-blue-600 hover:text-blue-800"
									target="_blank"
									rel="noopener">
									<svg class="w-3 h-3 mr-0.5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
										<path d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/>
									</svg>
									Link
								</a>
							)}
							<span class="text-gray-400 ml-auto">
								{project.category === 'project' ? '🛠️' : project.category === 'website' ? '🌐' : '🎤'}
							</span>
						</div>
					</div>
				</div>
			))}
		</div>
	</main>
</Layout>
